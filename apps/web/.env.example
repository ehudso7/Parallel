# ===========================================
# PARALLEL Web App - Environment Variables
# ===========================================

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Providers (alphabetically ordered)
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# Analytics (PostHog)
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_...

# Content Generation (alphabetically ordered)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
FAL_API_KEY=your_fal_api_key
REPLICATE_API_TOKEN=your_replicate_token
RUNWAY_API_KEY=your_runway_api_key
SUNO_API_KEY=your_suno_api_key

# Redis (optional caching)
UPSTASH_REDIS_REST_TOKEN=
UPSTASH_REDIS_REST_URL=

# Stripe Payments
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard)
# IMPORTANT: These must be valid Stripe price IDs before deployment
# Pricing: Basic=$19.99, Pro=$29.99, Unlimited=$49.99, Studio=$99.99
STRIPE_PRICE_BASIC=price_basic_monthly
STRIPE_PRICE_PRO=price_pro_monthly
STRIPE_PRICE_STUDIO=price_studio_monthly
STRIPE_PRICE_UNLIMITED=price_unlimited_monthly

# Supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
